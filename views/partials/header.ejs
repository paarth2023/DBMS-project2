<head>
  <link rel="stylesheet" href="styles/header.css" />
</head>

<header
  class="fixed top-0 left-0 right-0 z-50 bg-gray-900 text-white shadow-md"
>
  <% if(locals.username){ %>
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href="/homepage" class="flex items-center space-x-2">
        <img
          src="styles/shield-icon.svg"
          alt="Shield"
          class="h-8 w-8 text-blue-500"
        />
        <span class="text-xl font-bold">CrimeLink</span>
      </a>

      <%} else{ %>
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="flex items-center space-x-2">
            <img
              src="styles/shield-icon.svg"
              alt="Shield"
              class="h-8 w-8 text-blue-500"
            />
            <span class="text-xl font-bold">CrimeLink</span>
          </a>

          <% } %>
          <nav>
            <ul>
              
              <li><a href="/about">About Us</a></li>
              <% if(locals.username){ %>
                <li><a href= "/homepage" >Home</a></li>
                <li class="dropdown relative">
                  <button class="dropbtn">Ongoing Cases</button>
                  <div class="dropdown-content absolute hidden bg-gray-800 text-white rounded shadow-md">
                    <a href="/top10" class="block px-4 py-2 hover:bg-gray-700">Top 10 Most Wanted</a>
                    <a href="/mycases" class="block px-4 py-2 hover:bg-gray-700">My Cases</a>
                  </div>
                </li>
                
                <li class="dropdown">
                  <button class="dropbtn"><%= locals.username %></button>
                  <div class="dropdown-content">
                    <a href="/profile">Profile</a>
                    <a href="/logout">Logout</a>
                  </div>
                </li>
              <% } else { %>
                <li><a href="/login" class="nav-btn">Log In</a></li>
              <% } %>
            </ul>
          </nav>
        </div>
        </div>
      </div>
    </div>
  </div>
</header>
